# match case
if diem_str.isdigit():
    diem = float(diem_str)
    if 0 <= diem <= 10:
        match diem:
            case d if d < 5:
                print("Yếu")
            case d if d < 7:
                print("Trung bình")
            case d if d < 8.5:
                print("Khá")
            case _:
                print("Giỏi")
    else:
        print("Điểm nằm ngoài khoảng 0–10")
else:
    print("Giá trị nhập không hợp lệ (phải là số)")

